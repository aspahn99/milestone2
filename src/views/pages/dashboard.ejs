<html lang="en">

<script>
  document.getElementById('btn').addEventListener('click', e => {
    e.preventDefault();
    // smooth scroll
    document.getElementById('container').scrollTo({top: 175, behavior: 'smooth'});
  });
</script>

<head>
  <%- include('../partials/head') %>
  <link rel="preconnect" href="https://fonts.googleapis.com"> 
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Encode+Sans+Semi+Expanded&display=swap" rel="stylesheet">  
    <link href="https://fonts.googleapis.com/css2?family=Encode+Sans+Semi+Expanded:wght@400;700&display=swap" rel="stylesheet">
      <style>
        h1{
          font-family: 'Encode Sans Semi Expanded', sans-serif;
          font-size: 80px;
        }
        body{
          height: 100%;
          overflow-y: hidden;
        }
        html{
          max-height: 100%;
          margin: 0;
          background-image: url("https://img.freepik.com/free-photo/abstract-blur-interior-coffee-shop-cafe-background_42682-256.jpg");
          background-repeat: no-repeat;
          background-size: cover;
        }
        .column {
          height: 100%;
          float: left;
          width: 33%;
        }

        .row:after {
          content: "";
          display: table;
          clear: both;
        }

        .card{
          height: 40%;
          overflow: hidden;
        }

        img{
          width: 70%;
        }

        .card-1{
          background-color: rgba(54,160,226,.75);
          position: absolute; 
          height: 70%; 
          width: 28%; 
          top: 25%;
        }

        .card-2{
          background-color: rgba(54,160,226,.75);
          position: absolute; 
          height: 100%; 
          width: 39%; 
          left: 30.5%;
        }

        .card-3{
          background-color: rgba(54,160,226,.75);
          position: absolute; 
          height: 70%; 
          width: 28%; 
          top: 25%;
          left: 71%
        }

        .navbar{
          background-color: transparent;
        }
        
        .email{
          padding-left: 80%;
        }

        .scroll-container {
          overflow-y: auto;
          max-height: 90%;
          position: relative;
          margin: 0 auto;
          width: 90%;
        }

        .card-4 {
          background-color: rgba(154,210,244,1);
          font-family: 'Encode Sans Semi Expanded';
          font-weight: bolder;
          height: 350px;
        }

        .question{
          position: absolute;
          background-color: rgba(237,207,46,1);
          width: 280px;
          height: 100px;
          border-radius: 60px;
          text-align: center;
          margin-left: 210px;
          margin-top: 15px;
        }

        .answer{
          position: absolute;
          background-color:rgba(0,36,86,1);
          width: 400px;
          height: 180px;
          border-radius: 80px;
          margin-left: 60px;
          margin-top: 150px;
          text-align: center;
        }

        .question-content{
          color:rgba(0,36,86,1);
          padding-top: 10%;
        }

        .answer-content{
          color: rgba(255,255,255,1);
          padding-top: 10%;
          padding-right: 2%;
          padding-left: 2%;
        }

        .profile-info{
          position: absolute;
          height: 250px;
          width: 250px;
          margin-left: 10px;
          margin-top: 10px;
        }

        .profile-info img{
          border-radius: 50%;
        }

        .scroll-container-explore {
          overflow-y: auto;
          max-height: 90%;
          position: relative;
          margin: 0 auto;
          width: 90%;
        }

        .card-1 {
          font-size: 15px;
        }

        .card-1 .title {
          text-align: center;
          font-size: 35px;
          font-weight: bolder;
          color: antiquewhite;
        }

        .card-1 .answer{
          position: absolute;
          background-color:rgba(0,36,86,1);
          width: 300px;
          height: 140px;
          border-radius: 80px;
          margin-left: 30px;
          margin-top: 180px;
          text-align: center;
        }

        .card-1 .profile-info{
          position: absolute;
          height: 140px;
          width: 140px;
          margin-left: 10px;
          margin-top: 10px;
        }

        .card-1 .question{
          position: absolute;
          background-color: rgba(237,207,46,1);
          width: 240px;
          height: 100px;
          border-radius: 60px;
          text-align: center;
          margin-left: 120px;
          margin-top: 50px;
          padding-left: 10%;
          padding-right: 10%;
        }

        .card-3 {
          font-family: 'Encode Sans Semi Expanded';
        }
        
        .card-3 select {
          color: rgba(0,36,86,1);
          width: 80%;
          margin-left: 40px;
          height: 60px;
          font-size: 20px;
          text-align: center;
          font-weight: bolder;
          margin-top: 20px;
          margin-bottom: 50px;
          overflow: hidden;
          word-wrap: normal !important;
          white-space: normal;
        }

        .card-3 button {
          background-color: rgba(0,36,86,1);
          color: white;
          border-radius: 50%;
          height: 90px;
          width: 140px;
          margin-left: 250px;
          font-size: 25px;
          font-weight: bolder;
        }

        .card-3 textarea {
          height: 300px;
          width: 400px;
          margin-bottom: 20px;
          font-size: 20px;
          font-weight: bolder;
